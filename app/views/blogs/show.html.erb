<% provide(:title, "Blog Show") %>
<h1>BlogのShowページです</h1>

<p>
  <strong>Title</strong>
<%= @blog.title %>
</p>

<p>
  <strong>Text</strong>
<%= sanitize @blog.text, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img table tr td em br strong),  attributes:  %w(id class href src) %>
</p>


<% if user_signed_in? && current_user.id == @blog.user_id %>
<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
<% end %>
