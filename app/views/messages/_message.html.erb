<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag(message.user.avatar.url(:thumb), :size => '70x70') %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= message.user.name %> さん <%= message.timestamp %></span><br>
          <p class="speech"><%= text_url_to_link(h(message.body)).html_safe %></p>
        </p>
      </div>
    </div>
  </div>
</div>
