  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">nav1</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">nav2</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">nav3</a>
      </li>
    </ul>
  </div>
  </nav>


