<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "48", root_path, id: "logo" %> #サイトロゴ
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", '#' %></li>

        <% if user_signed_in? %>
          <li><%= link_to "プロフィール", current_user %></li>
